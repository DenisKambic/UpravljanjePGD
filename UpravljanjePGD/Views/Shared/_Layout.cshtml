<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - PGD Črešnjevec</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
	<link rel="icon" href="~/Pictures/icon.ico" type="image/x"/>

</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("PGD Črešnjevec", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
				<ul class="nav navbar-nav">
					<li>@Html.ActionLink("Domov", "Index", "Home")</li>
					<li>@Html.ActionLink("O nas", "Zgodovina", "Home")</li>
					<li>@Html.ActionLink("Kontakt", "Kontakt", "Home")</li>
					@if (User.IsInRole("Admin")){ 
						<li>@Html.ActionLink("Urejanje Novic", "Index", "Posts")</li>
						<li>@Html.ActionLink("Skupine", "Index", "Role")</li>
						<li>@Html.ActionLink("Inventar", "Index", "Inventars")</li>
					}
					@if (User.IsInRole("Poveljstvo")){
						<li>@Html.ActionLink("Objavi novico", "Index", "Posts")</li>
						<li>@Html.ActionLink("Inventar", "Index", "Inventars")</li>
					}
				</ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p style="float:left;">&copy; @DateTime.Now.Year - PGD Črešnjevec</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
